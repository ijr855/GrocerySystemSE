<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.5//EN"
    "http://struts.apache.org/dtds/struts-2.5.dtd">

<struts>

    <constant name="struts.devMode" value="true" />

    <package name="basicstruts2" extends="struts-default">
    	<!-- Index Actions -->
        <action name="index">
            <result>/index.jsp</result>
        </action>
        <action name="selectlogin" class="grocerysys.action.IndexAction" method="loadLogin">
        	<result name="success">/views/login.jsp</result>
        </action>
        <action name="selectcreate" class="grocerysys.action.IndexAction" method="loadCreate">
        	<result name="success">/views/createaccount.jsp</result>
        </action>
        
        <!-- Login Actions -->
        <action name="attemptLogin" class="grocerysys.action.LoginAction" method="checkLogin">
        	<result name="input">/views/login.jsp</result>
        	<result name="error">/index.jsp</result>
        	<result name="success">/views/homepage.jsp</result>
        </action>
        
        <!-- Create Account Actions -->
        <action name="createAccount" class="grocerysys.action.CreateAccountAction" method="createAccount">
        	<result name="success">/views/homepage.jsp</result>
        	<result name="error">/index.jsp</result>
        </action>
        
        <!-- Grocery list action -->
        <action name="getGrocery" class="grocerysys.action.GroceryAction" method="GetGrocery">
        	<result name="success">/views/groceryitems.jsp</result>
        </action>
        
        <action name="addToCart" class="grocerysys.action.GroceryAction" method="addToCart">
        	<result name="success" type="redirectAction">
        		<param name="actionName">getGrocery</param>
        	</result>
        	<result name="error">/views/homepage.jsp</result>
        </action>
        
        <action name="viewCart" class="grocerysys.action.CartAction" method="viewCart">
        	<result name="success">/views/cart.jsp</result>
        </action>
        

        <!-- Checkout Action -->
        <action name="checkOut" class="grocerysys.action.CheckOutAction" method="checkOut">
        	<result name="success">/views/confirmorder.jsp</result>
        </action>

        <action name="confirmOrder" class="grocerysys.action.CheckOutAction" method="confirmOrder">
        	<result name="success">/views/receipt.jsp</result>
        </action>
        
        <!-- Home page actions -->
        <action name="logOut" class="grocerysys.action.HomeAction" method="logOut">
        	<result name="success">/index.jsp</result>
        </action>
        
    </package>

</struts>